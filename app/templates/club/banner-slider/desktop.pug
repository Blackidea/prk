include ../container/desktop
include ../slide-button/desktop

mixin banner-slider()
  +container()
    +b.xfo-banner-slider
      +e.buttons
        +e.button
          +slide-button()._left.jso-banner-slider__button_prev
        +e.button
          +slide-button()._right.jso-banner-slider__button_prev

      +e('ul').items.jso-banner-slider__items
        +e('li').item.jso-banner-slider__item
          +e('a')(href='#').link
            +e('img')(src='files/banner1.jpg').image
        +e('li').item.jso-banner-slider__item
          +e('img')(src='files/banner1.jpg').image


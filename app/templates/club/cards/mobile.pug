include ../container/mobile
include ../button/mobile
include ../popup/desktop

mixin cards()
  +container()

    +e.heading
      +heading('h2')
        | Выберите карту Клуба Перекресток

    +b.xfo-cards

      +e.item
        +e('h3').card-title
          | Карта Клуба Перекресток
        +e('img')(src="assets/images/karta-kluba-perekrestok.png" alt="@@").image
        +e.for-cols

          +e.for-cols-column
            +e('p')
              | Как копить баллы?
            +e('img')(src="assets/images/10r-1.png" alt="@@")


          +e.for-cols-column
            +e('p')
              | Как тратить баллы?
            +e('img')(src="assets/images/10-1r.png" alt="@@")

        +button(true)(href="#")._green.__btn-m
          | Оформить карту
        +button(true)(href="#")._white.jso-cards__read-more
          | Подробнее

      +e.item
